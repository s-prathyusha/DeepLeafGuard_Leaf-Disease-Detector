<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/background"
        android:layout_width="450dp"
        android:layout_height="1000dp"
        android:background="#DBD7DC"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.423"
        app:srcCompat="@drawable/background" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#36B628"
        android:textStyle="bold"
        app:title="DeepLeafGuard - Leaf Disease Detector"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:layout_below="@id/toolbar"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="DeepLeafGuard - Your Ultimate Plant Health Companion"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/steps1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Follow these steps to detect the Disease:"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/appdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Welcome to DeepLeafGuard, your go-to companion for maintaining healthy and thriving plants. Whether you're a seasoned gardener or just starting out, DeepLeafGuard provides essential insights to help you nurture your green friends with confidence."
        android:textColor="#000000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/steps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="191dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="1. Capture and Upload Leaf Image\n\n2. Analyze and Diagnose\n\n3. Know the Causes\n\n4. Receive Recommendations"
        android:textColor="#000000"
        android:textSize="15sp"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        app:backgroundTint="#36B628"
        android:text="Lets Detect"
        android:textStyle="bold"
        android:id="@+id/btnStart"
        />


</RelativeLayout>